    <AndroidNamespaceReplacement Include='kotlinx' Replacement='KotlinX' />
    <AndroidNamespaceReplacement Include='support_lib_boundary' Replacement='ChromiumLibBoundary' />
    
    <!-- Remove some redundant words -->
